<!DOCTYPE html>
<html>
<head>
  <%- include('partials/head') %>
  <link rel="stylesheet" href="/stylesheets/home.css">
  <title>Todo los productos - Dietetica</title>
</head>

<body>
        <!-- ====== Header====== -->
  <%- include('partials/header.ejs') %>
        <!-- =================== -->
    <h1>Todos los productos</h1>
            
    <section>
        <% products.forEach(function(product){ %> 
        <article class="product" >
            <a id="link" href="/products/<%= product.id %>"><img class="productPh" src="/img/<%= product.image %>" alt=""></a>
            <div class="sliderDots">
                <a href="" class="sliderDot"></a>
                <a href="" class="sliderDot"></a>
                <a href="" class="sliderDot"></a>
                <a href="" class="sliderDot"></a>
            </div>
            <div class="desc">
                <h1 class="productTitle"><a href="/products/<%= product.id %>"><%= product.name %></a></h1>
                <p class="price">$<%= product.price %></p>
                <p class="format">por Kilogramo</p>
                <p class="description"><%= product.description %></p>
            </div>
            <button type="button" class="btn btn-outline-success" >Agregar al carrito</button>
                        
            <a class="btn btn-info" type="button" href="/products/<%= product.id %>" role="button">Más información</a>
        </article>
        <% }); %>
    </section>



        <!--====== Footer =======-->
    <%- include('partials/footer') %>
        <!--===== End Footer =======-->

    <%- include('partials/bootstrap-jq-poppers') %>

</body>